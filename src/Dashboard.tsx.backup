              }}
            >
              üìù Scrap Book
            </button>
            {/* Future feature tabs can be added here */}
            <button
              onClick={() => setActiveTab('coming-soon')}
              style={{
                background: activeTab === 'coming-soon' ? '#000000' : 'transparent',
